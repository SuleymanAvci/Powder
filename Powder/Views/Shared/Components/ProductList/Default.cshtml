@model List<Product>

<div class="row">
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mr-1 mb-1">
                    <img src="/img/@item.Image" class="card-img-top" alt="Resim Yok">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Price</p>
                        <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary float-right">Detay Göster</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            Herhangi bir ürün bulunmamaktadır.
        </div>
    }


</div>