@model Product

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <img src="" class="w-100 img-thumbnail img-fluid" alt="@Model.Name" />
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">@Model.Name</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">
                        <strong>Kategoriler:</strong> <getCategoryName product-id="@Model.Id"></getCategoryName>                    
                    <br />
                        @Model.Price</p>
                    <a href="#" class="btn btn-primary float-end">Sepete Ekle</a>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger float-end">Geni Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>