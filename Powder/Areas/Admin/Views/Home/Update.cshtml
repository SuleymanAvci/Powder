@model ProductUpdateModel

<form asp-action="Update" asp-controller="Home" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div type="hidden" asp-for="@Model.Id"></div>
    <div class="form-group">
        <label>Ürünün Adı:</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ürünün Fiyatı:</label>
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
        <input asp-for="@Model.Price" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ürünün Resmi:</label>
        <input type="file" asp-for="@Model.Image" class="form-control-file" />
    </div>

    <div class="form-group">
        <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-warning">Geri Dön</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section JavaScript{
    <script src="~/jqueryvalid/jquery.validate.min.js"></script>
    <script src="~/jqueryunob/jquery.validate.unobtrusive.min.js"></script>
}