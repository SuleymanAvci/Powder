@model List<Product>

<a asp-action="Add" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Ekle</a>
<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Image</th>
        <th>Name</th>
        <th>Fiyat</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Image</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a asp-action="Update" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
            </td>
            <td>
                <a asp-action="Delete" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
</table>
